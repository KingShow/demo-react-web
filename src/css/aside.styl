.app-aside{
    text-align: center;
    border-right: 1px solid #f5f5f5
    position: fixed;
    top: 2.4rem;
    left: 0;
    bottom: 0;
    ul{
        li{
            margin-top: .5rem;
            a{
                width: 6rem;
                font-size: .8rem;
                line-height: 2rem;
                color: #444;
                display: inline-block;
                border-right: 2px solid #fff;
            }
        }
    }
    .active{
        border-right: 2px solid #444;
        font-weight: 500;
    }
}